<UserControl x:Class="GeoGen_Studio.Output3D"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="300" Width="300">
    <Viewport3D Name="mainViewport" ClipToBounds="True">
        <Viewport3D.Camera >
            <PerspectiveCamera Position="100,100,100" LookDirection="-100,-100,-100 " UpDirection="0 0 1" />
        </Viewport3D.Camera>
        <ModelVisual3D>
            <ModelVisual3D.Content>
                <DirectionalLight 
	    Color="White" 
	    Direction="100, 100, 100" />
            </ModelVisual3D.Content>
        </ModelVisual3D>

    </Viewport3D>
</UserControl>
