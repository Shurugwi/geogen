<UserControl x:Class="GeoGen.Studio.UI.NumericBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="300"
             Name="numericBox"
             DataContext="{Binding ElementName=numericBox}">
    <DockPanel>
        <TextBox Width="100" DockPanel.Dock="Left" Margin="0,0,10,0" Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" />
        <TextBlock DockPanel.Dock="Left" Text="{Binding Minimum}" />        
        <TextBlock DockPanel.Dock="Right" Text="{Binding Maximum}" />
        <Slider Minimum="{Binding Minimum}" Maximum="{Binding Maximum}" Value="{Binding Value}"/>
    </DockPanel>
</UserControl>
