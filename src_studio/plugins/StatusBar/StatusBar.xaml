<pb:Control x:Class="GeoGen.Studio.PlugIns.StatusBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:pb="clr-namespace:GeoGen.Studio.Utilities.PlugInBase;assembly=GeoGenStudio"
             xmlns:plugin="clr-namespace:GeoGen.Studio.PlugIns"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="600"
             Name="statusBarControl"
             DataContext="{Binding ElementName=statusBarControl}">
    <StatusBar Height="24" Name="statusBar">
        <StatusBarItem Content="{Binding CurrentApplicationStatus}">
            
        </StatusBarItem>   
    </StatusBar>
</pb:Control>
